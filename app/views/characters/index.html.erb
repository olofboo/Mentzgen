<p id="notice"><%= notice %></p>

<h1>Listing Characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Alignment</th>
      <th>Str</th>
      <th>Int</th>
      <th>Wis</th>
      <th>Con</th>
      <th>Dex</th>
      <th>Cha</th>
      <th>Hp</th>
      <th>Level</th>
      <th>Xp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.alignment %></td>
	<td><%= character.str %></td>
        <td><%= character.int %></td>
        <td><%= character.wis %></td>
        <td><%= character.con %></td>
        <td><%= character.dex %></td>
        <td><%= character.cha %></td>
        <td><%= character.hp %></td>
        <td><%= character.level %></td>
        <td><%= character.xp %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

